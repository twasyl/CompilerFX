<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.twasyl.compilerfx.controllers.ConfigurationScreenController">
    <children>
        <Label styleClass="screen-title" text="Configuration" />

        <HBox spacing="10">
            <children>
                <Label text="Maven command" />
                <TextField fx:id="mvnCommand" />
                <Button fx:id="browseMvnCommand" text="..." onAction="#browse" />
            </children>
        </HBox>

        <HBox spacing="10">
            <Button text="Cancel" onAction="#cancel" />
            <Button text="Save" onAction="#save"  />
        </HBox>

    </children>
</VBox>

